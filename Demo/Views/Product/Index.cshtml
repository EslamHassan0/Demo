@model IEnumerable<Product>

@{
    ViewData["Titel"] = "Product Data";
}
<h1>@ViewData["Titel"]</h1>
<hr />
<form>
    <table class="table table-responsive   table-hover">
           <thead>
               <tr class="table-active">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Image</th>
               </tr>
           </thead>
           <tbody>
            @if(Model != null && Model.Any())
            {
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.Image</td>
                        <td>
                            <div class="btn-group btn-group-sn">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary" style="margin-right: 10px;">Edit</a>
                                <hr />
                                <a asp-controller="Product" asp-action="delete" asp-route-id="@product.Id" class="btn btn-danger">delete</a>
                            </div>
                        </td>
                    </tr>

                }
            }
        </tbody>
    </table>

